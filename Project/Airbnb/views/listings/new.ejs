<% layout('/layouts/boilerplate') %>
<body>


    <h1 class="text-center m-2">Add Listings</h1>

    
        
            <div class="row my-2">
                <div class="col-8 offset-2">
                    <form action="/listings"  method="post"  class="needs-validation" novalidate enctype="multipart/form-data">
                

                        <div  class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input required   type="text"  class="form-control"  placeholder="Enter your title" name="listing[title]" id="title">
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                            
                        </div>
        
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea  required  type="text"   class="form-control" placeholder="Enter your description" name="listing[description]" id="description"></textarea>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                            
                            
                        </div>
                        <div  class="mb-3">
                            <label class="form-label" for="image">Upload Listing Image File</label>
                            <input  type="file" class="form-control"  placeholder="Enter your image url"   id="image"  name="listing[image]">
                            
                        </div>
                        <div  class="mb-3">
                            <label class="form-label" for="price">Enter Price:</label>
                            <input required   type="text"  class="form-control"  placeholder="Enter your price" name="listing[price]" id="price">
                            <div class="invalid-feedback">
                                Please enter valid price.
                              </div>
                        </div>
                        <div  class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input  required   type="text"  class="form-control"  placeholder="Enter your location" name="listing[location]" id="location">
                            <div class="invalid-feedback">
                                Please enter your location.
                              </div>
                        </div>
                        <div  class="mb-3">
                            <label class="form-label" for="country">Country</label>
                            <input  required   type="text"  class="form-control"  placeholder="Enter your Country" name="listing[country]" id="country">
                            <div class="invalid-feedback">
                                Please enter country name.
                              </div>
                        </div>
                            
        
                        
                        
                        
                        
                        
                        
                        <button   class="btn btn-success px-5" type="submit">Add</button>
                    </form>
                </div>
            </div>

       
   
    
</body>
